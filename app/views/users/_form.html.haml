= form_for @user do |f|
  -if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :login
    = f.text_field :login
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :time_zone
    = f.text_field :time_zone
  .field
    = f.label :first_name
    = f.text_field :first_name
  .field
    = f.label :middle_initial
    = f.text_field :middle_initial
  .field
    = f.label :last_name
    = f.text_field :last_name
  .field
    = f.label :birthday
    = f.date_select :birthday
  .field
    = f.label :sex
    = f.text_field :sex
  .field
    = f.label :admin
    = f.check_box :admin
  .actions
    = f.submit 'Save'
